
@model Event_Mgnt_System.Models.Booking_Events

@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/PopupWin.css" />



    <script src="js/bootstrap.min.js"></script>
    <script src="http://code.jquery.com/jquery.js"></script>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<style>
    #box {
    }

    #main-div {
        height: 500px;
        background-image: url('../../Content/img/building6.jpg');
    }

    .insidebox {
        border: 1px solid black;
        margin: 20% auto 10% auto;
        max-width: 500px;
        min-width: 200px;
        padding-left: 60px;
        padding-right: 60px;
        border-radius: 10px;
        background-color: whitesmoke;
        margin-top:200px;
        
    }

    div h1 {
        text-align: center;
    }

    p#para {
        text-align: center;
        font-size: 14px;
    }
</style>

<body>
    <div id="main-div">
        <div id="box" class="img-responsive">


            @using (@Html.BeginForm("BookEvent", "User", new { Name = @ViewBag.Name }, FormMethod.Post))
            {
                <div class="insidebox">
                    <div> <h3>Book Event</h3></div>






                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></div>
                            @*<asp:TextBox ID="TextBox1" runat="server" class="form-control" placeholder="Username" required="required"></asp:TextBox>*@
                            @Html.TextBoxFor(x => x.email, new { @class = "form-control", @placeholder = "EmailId" })

                        </div>
                        <span style="color:red">   @Html.ValidationMessageFor(x => x.email) </span>
                    </div>

                    <div class="form-group">
                        <div class="input-group">

                            <div class="input-group-addon"><span class="glyphicon glyphicon-filter"></span></div>
                            @Html.TextBoxFor(x => x.Event_Type, new { @class = "form-control",Value = @ViewBag.Name})
                            @*@Html.DropDownListFor(x=>x.Event_Type, ViewBag.eventlist as SelectList,"------select-----",new {@class="form-control"})*@


                        </div>
                        <span style="color:red">   @Html.ValidationMessageFor(x => x.Event_Type) </span>
                    </div>

                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon"><span class="glyphicon glyphicon-map-marker"></span></div>
                            @*<asp:TextBox ID="TextBox1" runat="server" class="form-control" placeholder="Username" required="required"></asp:TextBox>*@
                            @Html.TextBoxFor(x => x.Venue, new { @class = "form-control", @placeholder = "Venue" })

                        </div>
                        <span style="color:red">   @Html.ValidationMessageFor(x => x.Venue) </span>
                    </div>

                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></div>
                            @*<asp:TextBox ID="TextBox1" runat="server" class="form-control" placeholder="Username" equired="required"></asp:TextBox>*@
                            @Html.TextBoxFor(x => x.Event_Date, new { @class = "form-control", @placeholder = "Event Date " })

                        </div>
                        <span style="color:red">   @Html.ValidationMessageFor(x => x.Event_Date) </span>
                    </div>


                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon"><span class="glyphicon glyphicon-hourglass"></span></div>
                            @*<asp:TextBox ID="TextBox1" runat="server" class="form-control" placeholder="Username" required="required"></asp:TextBox>*@
                            @Html.TextBoxFor(x => x.Event_time, new { @class = "form-control", @placeholder = "Event Time" })

                        </div>
                        <span style="color:red">   @Html.ValidationMessageFor(x => x.Event_time) </span>
                    </div>


                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon"><span class="glyphicon glyphicon-check"></span></div>
                            @*<asp:TextBox ID="TextBox1" runat="server" class="form-control" placeholder="Username" required="required"></asp:TextBox>*@
                            @Html.TextBoxFor(x => x.Guest_Number, new { @class = "form-control", @placeholder = "Guest Number" })

                        </div>
                        <span style="color:red">   @Html.ValidationMessageFor(x => x.Guest_Number) </span>
                    </div>

                    <div class="form-group">

                        @if (!IsPost)
                        {
                            <input type="submit" value="Send Details" class="btn btn-default btn-block" />
                        }
                        else
                        {
                            <a class="btn btn-default btn-block" data-toggle="modal" data-target=".bootstrapmodal">Book Now</a>
                        }


                    </div>

                    <div class="form-group">
                        <p style="color:red">@ViewBag.error</p>
                    </div>



                </div>

            }
        </div>

    </div>



 <div class="modal fade bootstrapmodal" >
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <div class="modal-title" >
                      
                    </div>
                    <button data-dismiss="modal" class="close"><span> &times;</span> </button>




                </div>
                <div class="modal-body" style="width:400px;height:200px">
                  

                    <span style="color:black; font-size:x-large">
                        <span class="glyphicon glyphicon-thumbs-up"></span>
                        Thank you for Booking with us!!
                    </span>
                    <br /><br />
                    <p style="color:black; font-size:large;font-weight:300">Your Application Send for Approval!!
                    <br /></br><br />

                    Wait for Confirmation!
                    </p>




                </div>
                <div class="modal-footer" style="text-align:left">
                    Contact:
                    <span class="glyphicon glyphicon-envelope"> Dreamevent21@gmail.com</span>&nbsp;&nbsp;
                    <span class="glyphicon glyphicon-earphone">  91 4521369784</span>
                </div>


            </div>

        </div>
    </div>



    <script src="~/Scripts/jquery.validate-vsdoc.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>
</html>>

