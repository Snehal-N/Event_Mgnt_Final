@using PagedList.Mvc;
@model PagedList.IPagedList<Event_Mgnt_System.Models.Booking_Events>
@{
    Layout = "~/Views/Shared/_SignupLayoutPage.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/paginition.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <title>Profile</title>
</head>
<body>


    @*<div style="height:600px;width:350px;margin-left:530px;margin-top:200px;font-size:large;
         border:3px solid black;text-align:center">
            <img src="~/Content/Images/profile.png" class="img-center" height="160" width="200" />

            <p>
            <p style="font-size:larger;font-weight:300"> Profile Information:</p><br />
            UserName:@ViewBag.UserName<br />
            City:@ViewBag.city
            </p><br />
            <p>
            <p style="font-size:larger;font-weight:300"> Contact Information:</p><br />
                Contact Number:@ViewBag.contact<br />
